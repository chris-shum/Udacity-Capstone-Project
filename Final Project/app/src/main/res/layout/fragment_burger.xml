<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.loaded.android.loaded.ui.Menu.BurgerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_meat_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meat_burgers"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintLeft_toRightOf="@+id/textView_meat_spinner"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cheeses_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cheese_burgers"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_meat" />

            <Spinner
                android:id="@+id/spinner_cheeses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintLeft_toRightOf="@+id/textView_meat_spinner"
                app:layout_constraintTop_toBottomOf="@+id/spinner_meat" />

            <TextView
                android:id="@+id/textView_toppings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toppings_burgers"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_cheeses" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_toppings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_toppings" />

            <TextView
                android:id="@+id/textView_fries_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fries_burgers"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_toppings" />

            <Spinner
                android:id="@+id/spinner_fries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/textView_fries_spinner"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_toppings" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_burgerTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/burger_start_total"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <Button
            android:id="@+id/button_burgers_addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart_button" />

    </LinearLayout>


</LinearLayout>
