<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.loaded.android.loaded.ui.Menu.MenuFragment">

    <app.com.loaded.android.loaded.presenter.CustomPicassoLayout
        android:id="@+id/textview_menu_burgers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:text="burgers" />

    <app.com.loaded.android.loaded.presenter.CustomPicassoLayout
        android:id="@+id/textview_menu_fries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:text="fries" />

    <app.com.loaded.android.loaded.presenter.CustomPicassoLayout
        android:id="@+id/textview_menu_bbq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:text="bbq" />


</LinearLayout>
